{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "typeRoots": [
            "./types","./node_modules/@types"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2016"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules","typings"
    ],
}